<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>


  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/main.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
</head>
<body>

  <!-- ----------------------nav bar--------------------- -->
  <nav class="nav">
    <% if (!user) { %>
    <div class="nav-item">
      <form action="api/login/" method="POST">
        <label for="loginEmail">Email:</label>
        <input type="email" id="loginEmail" name="loginEmail">
        <label for="loginPassword">Password:</label>
        <input type="password" id="loginPassword" name="loginPassword">
        <input type="submit" value="Login">
        </form>
        <a href="#welcome" class="nav-link">Welcome</a>
        <a href="#menu" class="nav-link">Menu</a>
        <a href="#cart" class="nav-link">Check Out</a>
        <a href="#order" class="nav-link">Your Meal</a>
    </div>
    <% } %>

    <% if ((user) && user !== 1) { %>
      <div class="nav-item">
          <h1>User logged in</h1>
          <a href="#welcome" class="nav-link">Welcome</a>
          <a href="#menu" class="nav-link">Menu</a>
          <a href="#cart" class="nav-link">Check Out</a>
          <a href="#order" class="nav-link">Your Meal</a>
      </div>
    <% } %>

    <% if (user === 1) { %>
      <div class="nav-item">
        <h1>Admin logged in</h1>
        <a href="#welcome" class="nav-link">Welcome</a>
        <a href="#menu" class="nav-link">Menu</a>
        <a href="#cart" class="nav-link">Check Out</a>
        <a href="#order" class="nav-link">Your Meal</a>
    </div>
    <% } %>

  </nav>
  <!-- ----------------------------welcome--------------------------------- -->
  <div class="section" id="welcome" data-label="Welcome"><%- include('welcome.ejs') %>

  </div>
  <!-- ------------------------------------menu------------------------------------------- -->
  <div class="section" id="menu" data-label="Menu"><%- include('menu.ejs') %></div>
  <!-- -----------------cart---------------------- --------------------------------------------->
  <div class="section" id="cart" data-label="Cart"><%- include('cart.ejs') %></div>
  <!-- -----------------------------------------------order----------------------------------------------- -->
  <div class="section" id="order" data-label="Order"> <%- include('order.ejs') %></div>

</body>
</html>


</html>




</html>
