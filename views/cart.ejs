<div class="eComm">
  <div class="CartContainer">

    <div class="Header">
      <h3 class="Heading">Shopping Cart</h3>
      <h5 class="Action">Remove all</h5>
    </div>

    <div class="Cart-Items">
      <div class="image-box">
        <img class="menu-item-image" src="https://dummyimage.com/600x400/000/fff" alt="Burger">
      </div>

      <div class="about">
        <h1 class="title">Burger</h1>
      </div>

      <div class="counter">
        <div class="btn">+</div>
        <div class="count">2</div>
        <div class="btn">-</div>
      </div>

      <div class="prices">
        <div class="amount">$17.00</div>
        <div class="save"><u>Save for later</u></div>
        <div class="remove"><u>Remove</u></div>
      </div>

    </div>

    <div class="Cart-Items pad">

      <div class="image-box">
        <img class="menu-item-image" src="https://dummyimage.com/600x400/00f/000" alt="Milk Shake">
      </div>

      <div class="about">
        <h1 class="title">Shake</h1>
      </div>

      <div class="counter">
        <div class="btn">+</div>
        <div class="count">1</div>
        <div class="btn">-</div>
      </div>

      <div class="prices">
        <div class="amount">$6.25</div>
        <div class="save"><u>Save for later</u></div>
        <div class="remove"><u>Remove</u></div>
      </div>

    </div>

    <div class="checkout">

      <div class="total">
        <div>
          <div class="Subtotal">Sub-Total</div>
          <div class="items">2 items</div>
        </div>

        <div class="total-amount">$23.25</div>
      </div>

      <form action="/" method="GET" role="form">

        <div class="form-group">
          <label for="telephone">
            phone number please
            <input type="tel" class="form-control" id="telephone" placeholder="SMS when food is ready">
        </div>

         <div class="form-group">
          <label for="customerName">
            Name Please
          </label>
          <input type="text" class="form-control" id="customerName">
        </div>

        <button type="submit" class="btn-primary">
          Submit
        </button>
      </form>
    </div>
  </div>
</div>
