  <% if ((user) && user !== 1) { %>
    <div class="nav-item">
        <a href="#welcome" class="nav-link">Welcome</a>
        <a href="#menu" class="nav-link">Menu</a>
        <a href="#cart" class="nav-link">Check Out</a>
        <a href="#order" class="nav-link">Your Meal</a>
    </div>
    <div>
      <form method="POST" action="/logout">
        <p>Logged in as: Customer <%- user -%></p>
        <input type="submit" value="Logout">
      </form>
